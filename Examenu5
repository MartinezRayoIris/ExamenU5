package ExamenU5;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.io.RandomAccessFile;
import java.util.Scanner;

/**
 *
 * @author marti
 */
public class ExamenU5 {

  public static void shellSort( int b[ ])
    { 
for(int k= b.length/2; k>0; k=k==2?1:(int)( k/2.2))
{ 
      for(int i=k;i<b.length; i++ )
      { 
        int tmp =b[i]; 
        int j; 
        for(j=i; j>=k&&tmp<b[j-k]; j-=k)
        { 
          b[j]=b[j-k]; 
        } 
        b[j]=tmp; 
     } 
} 

    } 
   public static void main(String args[]) throws FileNotFoundException, IOException{ 
       
 try {
//declaramos una variable para br
BufferedReader br;
//declarando variables para recoger los datos
int codAlu;
String nom;
String ape;
String dni;
int edad;
int celu;
int estado;
String linea;
//declaramos un arreglo de tipo string
String[] s;
//int[] Y;

//crenado en br y fr
br=new BufferedReader(new FileReader("NUMEROS.txt"));
int cant_elementos = br.read(); //leer la cantidad de elementos que se encontrarán en el fichero. Esta linea puede ser eliminada si este elemento no existe
        int[] array = new int[cant_elementos];
while((linea=br.readLine())!=null){
s=linea.split(";");
for(int i=0;i<s.length;i++){
array[i]=Integer.parseInt(linea);
       
}
System.out.println("Antes del ordenamiento");
for(int i=0;i<array.length;i++)
{
    System.out.print(array[i]+" ");
    
}

shellSort(array); //llamada al metodo shellSort 
    System.out.println("\n");
System.out.println("Ordenado por el método Shell");
for (int i=0;i < array.length;i++){ //Este bucle imprime el contenido del array 
    
    System.out.print(array[i]+" "); 
}
//agregamos los datos de la variables al objeto array list
//alu.add(new Alumno(codAlu, nom, ape, dni, edad, celu, estado));
}//while
br.close();
} catch (Exception e) {

}
    //fin del for 
}//fin del main 

}
